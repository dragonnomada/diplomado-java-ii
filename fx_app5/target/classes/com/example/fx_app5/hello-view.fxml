<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" prefHeight="296.0" prefWidth="341.0" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/16" fx:controller="com.example.fx_app5.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <children>
      <Label fx:id="label1" text="Nombre:" />
      <TextField fx:id="textField1" onAction="#onNombreChanged" onKeyReleased="#onNombreChanged" promptText="Nombre del Producto" />
      <Label fx:id="label2" text="Precio: $50.00" />
      <Slider fx:id="slider1" max="1000.0" min="1.0" onKeyReleased="#onPrecioChanged" onMouseReleased="#onPrecioChanged" value="50.0" />
      <Button mnemonicParsing="false" onAction="#onProductoGuardar" text="Guadar" />
   </children>
</VBox>
